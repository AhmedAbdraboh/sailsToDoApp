

<% if( !_.isEmpty(note)){ %>
    <div class="alert alert-danger">
        <strong><%=note %></strong>
    </div>

<% } %>

<form class="form-horizontal" method="post" action="/edit">
  <input type="hidden" value="<%=todoToEditId %>" name="id"/>

   <div class="form-group">
    <label for="todo" class="col-sm-2 control-label">Edit Todo : </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="<%=todoToEditAction %>" name="todo">
    </div>
  </div>

 
  
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Edit</button>
    </div>
  </div>
</form>